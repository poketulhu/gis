<h1>Добавить город</h1>  

<%= form_for :city, url: cities_path do |f| %>

  <% if not @city.nil? and @city.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@city.errors.count, "error") %> prohibited
      this city from being saved:</h2>
    <ul>
    <% @city.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <p>
    <%= f.label  "Название"%><br>
    <%= f.text_field :name %>
