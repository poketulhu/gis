    <%= f.label "Широта" %><br>
    <%= f.text_field :latitude %>
  </p>

  <p>
    <%= f.label "Долгота" %><br>
    <%= f.text_field :longitude %>
  </p>

  <p>
    <%= f.label "Население" %><br>
    <%= f.text_field :population %>
  </p>

  <p>
    <%= f.label "Экономика" %><br>
    <%= f.text_area :economy %>
  </p>

  <p>
    <%= f.label "Изображение" %><br />
    <%= f.file_field :image %>
  </p>

  <p>
    <%= f.submit 'Создать' %>
  </p>

  <% end %>

  

<%= link_to '<- Назад', cities_path %>